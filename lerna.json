{
  "$schema": "http://json.schemastore.org/lerna",
  "version": "independent",
  "npmClient": "yarn",
  "packages": ["packages/*", "docs"],
  "command": {
    "version": {
      "message": "chore: publish",
      "conventionalCommits": true
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "packages/orbit-design-tokens/scripts/**",
        "packages/orbit-components/config/**"
      ]
    }
  }
}
