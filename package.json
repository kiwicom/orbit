{
  "name": "@kiwicom/orbit",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:ci": "npx --yes lerna bootstrap -- --frozen-lockfile",
    "components": "yarn workspace @kiwicom/orbit-components",
    "tokens": "yarn workspace @kiwicom/orbit-design-tokens",
    "docs": "yarn workspace @kiwicom/orbit.kiwi",
    "build": "yarn tokens build && yarn components build",
    "build-ci": "lerna bootstrap && yarn tokens build && yarn components build",
    "preinstall": "node scripts/ci-streamline-env.js",
    "postinstall": "lerna run postinstall --stream",
    "prettier:test": "prettier --check '**/*.md'",
    "eslint:ci": "eslint-config-prettier index.js index.ts && eslint . --report-unused-disable-directives",
    "eslint:docs": "eslint --fix docs/src/documentation --report-unused-disable-directives",
    "check-types": "yarn tsc && yarn tsc --project packages/orbit-components/cypress",
    "check-links": "yarn check-links:src && yarn check-links:dist",
    "check-links:src": "remark -e '.mdx' -fq -u validate-links docs/src/documentation --no-config",
    "check-links:dist": "node docs/services/check-links.js",
    "flow:check": "flow check",
    "test": "jest",
    "test-ci": "jest --ci --maxWorkers=2 && lerna run test",
    "update-supported-browsers": "markdown --path .github/contribution/testing-conventions.md && git add .github/contribution/testing-conventions.md",
    "loki:test": "yarn components loki test",
    "loki:approve": "yarn components loki approve",
    "dev": "yarn components storybook",
    "dev:test": "cross-env NODE_ENV=loki yarn dev",
    "publish-packages": "gulp publish",
    "orbit-kiwi:build": "yarn bootstrap:ci && yarn tokens build:lib && yarn components build:lib && yarn docs build",
    "prepare": "husky install"
  },
  "engines": {
    "yarn": ">=1.19.1"
  },
  "author": "kiwi.com",
  "license": "MIT",
  "devDependencies": {
    "@adeira/babel-preset-adeira": "^3.0.0",
