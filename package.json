{
  "name": "@kiwicom/orbit-components",
  "version": "0.83.0",
  "description": "Orbit-components is a React component library which provides developers with the easiest possible way of building Kiwi.comâ€™s products.",
  "sideEffects": false,
  "scripts": {
    "storybook": "start-storybook -p 6007 -c .storybook --ci -s ./static",
    "build": "yarn clean && yarn build:icons && yarn build:iconFont && yarn build:flowFiles && yarn build:lib && yarn build:module && yarn build:umd",
    "build:lib": "babel --out-dir lib --ignore **/*.stories.js,**/*.test.js,**/*.storyshot.js src && yarn copy:lib",
    "build:module": "cross-env BABEL_TARGET=\"js-esm\" babel --out-dir es --ignore **/*.stories.js,**/*.test.js,**/*.storyshot src && yarn copy:module",
    "build:icons": "babel-node config/build.js",
    "build:iconsPng": "node config/generatePngIcons.js",
    "build:flowFiles": "babel-node config/flowFiles.js",
    "build:iconFont": "babel-node config/createSVGFont.js && cd src/icons/; zip -r ../../orbit-svgs.zip ./svg; cd -; zip -j orbit-svgs.zip orbit-icons-font/orbit-icons.svg && zip -r orbit-icons-font.zip orbit-icons-font",
    "build:storybook": "cross-env BABEL_TARGET=storybook build-storybook -c .storybook -o .out -s ./static",
    "build:umd": "webpack --mode=production",
    "copy:lib": "copyfiles -u 1 'src/**/*.md' lib && copyfiles -u 1 'src/**/*.js.flow' lib && copyfiles -u 1 'src/**/*.json' lib",
    "copy:module": "copyfiles -u 1 'src/**/*.md' es && copyfiles -u 1 'src/**/*.js.flow' es && copyfiles -u 1 'src/**/*.json' es",
    "clean": "rimraf lib es src/icons/*.js src/icons/*.js.flow",
    "prepare": "npm run build",
    "prettier:fix": "prettier --write '**/*.md'",
    "prettier:test": "prettier --check '**/*.md'",
    "watch": "concurrently \"npm run build:lib -- --watch\" \"npm run build:module -- --watch\"",
    "eslint": "eslint . --report-unused-disable-directives",
    "flow:check": "flow check",
    "test": "jest --config=jest.json",
    "test-ci": "yarn flow:check && yarn eslint && yarn test --ci --maxWorkers=2 && yarn prettier:test",
    "fetch-translations": "babel-node config/fetchTranslations.js",
    "build-storybook": "build-storybook -s ./static",
    "deploy:storybook": "cross-env BABEL_TARGET=\"storybook\" storybook-to-ghpages",
    "deploy:surge": "yarn surge .out/ https://orbit-components-$(git rev-parse --abbrev-ref HEAD | sed -e 's/[^a-zA-Z0-9]/-/g').surge.sh",
    "deploy:updateURL": "yarn babel-node config/deploymentUtils.js updateLiveURL"
  },
  "storybook-deployer": {
    "gitUsername": "GH Pages Bot",
    "gitEmail": "hello@ghbot.com",
    "commitMessage": "Deploy Storybook to GitHub Pages [skip ci]"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kiwicom/orbit-components.git"
  },
  "keywords": [
    "orbit",
    "components",
    "ui",
    "library",
    "component"
  ],
  "browserslist": [
    "last 2 versions",
    "Edge >= 38"
  ],
  "files": [
    "es",
    "lib",
    "umd",
    "orbit-icons-font",
    "orbit-icons-font.zip",
    "orbit-svgs.zip",
    ".babelrc",
    ".eslintrc",
    ".flowconfig",
    "package.json",
    "readme.md",
    "yarn.lock"
  ],
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn prettier:fix"
    }
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "author": "kiwi.com",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1"
  },
  "dependencies": {
    "@adeira/js": "^1.2.2",
    "@kiwicom/orbit-design-tokens": "~0.9.0"
  },
  "devDependencies": {
    "@adeira/babel-preset-adeira": "^0.3.0",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/runtime": "^7.9.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@emotion/core": "^10.0.28",
    "@octokit/rest": "^15.13.1",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-info": "5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addons": "5.3.18",
    "@storybook/react": "^5.3.18",
    "@storybook/storybook-deployer": "^2.8.5",
    "@svgr/core": "^2.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.4.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-styled-components": "^1.10.7",
    "camelcase": "^6.0.0",
    "capitalize": "^2.0.3",
    "copyfiles": "^2.2.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "flow-bin": "^0.123.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.2",
    "isomorphic-unfetch": "^3.0.0",
    "jest": "^25.4.0",
    "husky": "^4.2.5",
    "jest-styled-components": "^6.2.1",
    "jsdom": "^16.2.2",
    "loki": "^0.15.0",
    "make-runnable": "^1.3.6",
    "mkdirp": "^1.0.4",
    "prettier": "^2.0.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-element-to-jsx-string": "^14.3.1",
    "react-test-renderer": "^16.13.0",
    "rimraf": "^3.0.2",
    "sharp": "^0.25.2",
    "styled-components": "^4.4.1",
    "surge": "^0.20.1",
    "svg2ttf": "^4.2.0",
    "svgicons2svgfont": "^9.0.4",
    "ttf2woff2": "^3.0.0",
    "webpack-cli": "^3.3.11"
  }
}
