{
  "name": "@kiwicom/orbit",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:ci": "npx --yes lerna bootstrap -- --frozen-lockfile",
    "components": "yarn workspace @kiwicom/orbit-components",
    "tokens": "yarn workspace @kiwicom/orbit-design-tokens",
    "docs": "yarn workspace @kiwicom/orbit.kiwi",
    "build": "yarn tokens build && yarn components build",
    "build-ci": "lerna bootstrap && yarn tokens build && yarn components build",
    "preinstall": "node scripts/ci-streamline-env.js",
    "postinstall": "lerna run postinstall --stream",
    "prettier:test": "prettier --check '**/*.md'",
    "eslint:ci": "eslint-config-prettier index.js index.ts && eslint . --report-unused-disable-directives",
    "eslint:docs": "eslint --fix docs/src/documentation --report-unused-disable-directives",
    "check-types": "tsc && tsc --project docs && tsc --project packages/orbit-components/cypress",
    "check-links": "yarn check-links:src && yarn check-links:dist",
    "check-links:src": "remark -e '.mdx' -q -u validate-links docs/src/documentation --no-config",
    "check-links:dist": "node docs/services/check-links.js",
    "flow:check": "flow check",
    "test": "jest",
    "test-ci": "jest --ci --maxWorkers=2 && lerna run test",
    "update-supported-browsers": "markdown --path .github/contribution/testing-conventions.md && git add .github/contribution/testing-conventions.md",
    "loki:test": "yarn components loki test",
    "loki:approve": "yarn components loki approve",
    "dev": "yarn components storybook",
    "dev:test": "cross-env NODE_ENV=loki yarn dev",
    "publish-packages": "gulp publish",
    "orbit-kiwi:build": "yarn bootstrap:ci && yarn tokens build && yarn components build && yarn docs build",
    "prepare": "husky install"
  },
  "engines": {
    "yarn": ">=1.19.1"
  },
  "author": "kiwi.com",
  "license": "MIT",
  "resolutions": {
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@kiwicom/browserslist-config": "^1.0.0",
    "@lerna/project": "^3.21.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.23.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.1",
    "browserslist": "^4.16.6",
    "caniuse-db": "^1.0.30001208",
    "conventional-changelog": "^3.1.24",
    "cross-env": "^7.0.2",
    "dotenv-safe": "^8.2.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-adeira": "^0.11.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "flow-bin": "^0.147.0",
    "gulp": "^4.0.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "4.0.0",
    "lint-staged": "^11.0.0",
    "markdown-chalk": "^2.1.0",
    "markdown-magic": "^1.0.0",
    "merge-stream": "^2.0.0",
    "prettier": "^2.1.2",
    "raf": "^3.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark-cli": "^9.0.0",
    "remark-frontmatter": "^2.0.0",
    "remark-lint": "^8.0.0",
    "remark-lint-first-heading-level": "^2.0.1",
    "remark-mdx": "^1.6.22",
    "remark-preset-lint-markdown-style-guide": "^4.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "remark-preset-prettier": "^0.4.0",
    "remark-validate-links": "^10.0.2",
    "styled-components": "^5.2.2",
    "through2": "^4.0.2",
    "typescript": "^4.2.4"
  }
}
