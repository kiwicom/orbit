    "babel-loader": "^8.1.0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-styled-components": "^1.11.1",
    "browserslist": "^4.14.5",
    "camelcase": "^6.0.0",
    "caniuse-db": "^1.0.30001142",
    "capitalize": "^2.0.3",
