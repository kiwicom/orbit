{
  "name": "@kiwicom/orbit",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "build-ci": "yarn size:build",
    "components": "yarn workspace @kiwicom/orbit-components",
    "checks": "ts-node --esm scripts/checks.mts",
    "check:types": "yarn checks --types",
    "check:links": "yarn checks --links",
    "check:css": "yarn checks --css",
    "check:statuses": "yarn checks --statuses",
    "dev:test": "cross-env NODE_ENV=loki yarn dev",
    "dev": "yarn components storybook",
    "docs": "yarn workspace @kiwicom/orbit.kiwi",
    "eslint:ci": "eslint-config-prettier index.js index.ts && eslint . --report-unused-disable-directives",
    "eslint:docs": "eslint --fix docs/src/documentation --report-unused-disable-directives",
    "loki:approve": "yarn components loki approve",
    "loki:test": "yarn components loki test",
    "orbit-kiwi:build": "yarn && yarn tokens build && yarn components build && yarn themer build && yarn docs build",
    "postinstall": "lerna run postinstall --stream",
    "prepare": "husky install",
    "prettier:test": "prettier --check '**/*.md'",
    "publish-packages": "zx scripts/publish.mjs",
    "size:build": "yarn tokens size:build && yarn components size:build",
    "size": "yarn size:build && size-limit",
    "test-ci": "jest --ci --maxWorkers=2 && lerna run test",
    "test": "jest",
    "themer": "yarn workspace @kiwicom/orbit-themer",
    "tokens": "yarn workspace @kiwicom/orbit-design-tokens",
    "tracking": "yarn workspace @kiwicom/orbit-tracking",
    "update-supported-browsers": "markdown --path .github/contribution/testing-conventions.md && git add .github/contribution/testing-conventions.md"
  },
  "engines": {
    "yarn": ">=1.19.1"
  },
  "author": "kiwi.com",
  "license": "MIT",
  "resolutions": {
    "@types/eslint": "^7.29.0",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.9",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/runtime": "7.18.9",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@kiwicom/browserslist-config": "^3.0.0",
    "@octokit/rest": "^19.0.5",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@lerna/project": "^5.2.0",
    "@size-limit/file": "^8.0.0",
    "@size-limit/webpack": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^28.1.3",
    "browserify-fs": "^1.0.0",
    "browserslist": "^4.16.6",
    "conventional-changelog": "^3.1.24",
    "cross-env": "^7.0.2",
    "dotenv-safe": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "flow-bin": "^0.187.1",
    "husky": "^6.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lerna": "5.2.0",
    "lint-staged": "^12.3.2",
    "markdown-chalk": "^2.1.0",
    "markdown-magic": "^2.6.0",
    "merge-stream": "^2.0.0",
    "postcss": "^8.4.18",
    "postcss-syntax": "^0.36.2",
    "path-browserify": "^1.0.1",
    "prettier": "^2.1.2",
    "raf": "^3.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark-cli": "^9.0.0",
    "remark-frontmatter": "^2.0.0",
    "remark-lint": "^8.0.0",
    "remark-lint-first-heading-level": "^2.0.1",
    "remark-mdx": "^1.6.22",
    "remark-preset-lint-markdown-style-guide": "^4.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "remark-preset-prettier": "^0.4.0",
    "remark-validate-links": "^10.0.2",
    "size-limit": "^8.0.0",
    "slackify-markdown": "^4.3.1",
    "stream-browserify": "^3.0.0",
    "styled-components": "^5.3.1",
    "stylelint": "^14.14.1",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "through2": "^4.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "zx": "^7.0.7"
  }
}
