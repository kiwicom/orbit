{
  "name": "@kiwicom/orbit",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "orbit-components": "yarn workspace @kiwicom/orbit-components",
    "build-ci": "lerna bootstrap && yarn orbit-components build",
    "postinstall": "yarn orbit-components build:icons && yarn orbit-components build:typeFiles",
    "prettier:test": "prettier --check '**/*.md'",
    "eslint:check": "eslint . --report-unused-disable-directives",
    "flow:check": "flow check",
    "test": "jest --config=jest.json",
    "test-ci": "yarn orbit-components check:icons && yarn orbit-components build && yarn flow:check && yarn tsc && yarn eslint:check && yarn test --ci --maxWorkers=2 && yarn workspace @kiwicom/babel-plugin-orbit-components test && yarn prettier:test",
    "update-supported-browsers": "markdown --path .github/contribution/testing-conventions.md && git add .github/contribution/testing-conventions.md",
    "loki:test": "yarn workspace @kiwicom/orbit-components loki test",
    "loki:approve": "yarn workspace @kiwicom/orbit-components loki approve",
    "dev": "yarn workspace @kiwicom/orbit-components storybook",
    "dev:test": "cross-env NODE_ENV=loki yarn dev",
    "publish-packages": "gulp publish"
  },
  "lint-staged": {
    "*.{js,js.flow,ts}": "eslint --fix --report-unused-disable-directives",
    "*.md": "prettier --write",
    "*.svg": "yarn orbit-components check:icons",
    ".browserslistrc": "yarn update-supported-browsers"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "yarn": ">=1.22.4"
  },
  "author": "kiwi.com",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@adeira/babel-preset-adeira": "^0.4.0",
    "@babel/cli": "^7.12.0",
    "@babel/core": "^7.11.6",
    "@babel/generator": "^7.12.1",
    "@babel/node": "^7.10.5",
    "@babel/runtime": "^7.11.2",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@emotion/core": "^10.0.35",
    "@kiwicom/browserslist-config": "^1.0.0",
    "@octokit/rest": "^15.13.1",
    "@storybook/addon-actions": "^6.0.26",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-knobs": "^6.0.27",
    "@storybook/addons": "^6.0.26",
    "@storybook/react": "^6.0.26",
    "@storybook/storybook-deployer": "^2.8.7",
