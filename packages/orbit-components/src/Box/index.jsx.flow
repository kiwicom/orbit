  +bottom?: string,
  +align?: "start" | "end" | "center" | "stretch",
  +justify?: "center" | "start" | "end" | "between" | "around",
  +textAlign?: "left" | "right" | "center",
  +elevation?: Elevation,
  +color?: ColorTokens,
