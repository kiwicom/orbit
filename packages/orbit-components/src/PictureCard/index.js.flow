import type { Globals } from "../common/common.js.flow";

type Image = {|
  +original: string,
  +placeholder?: string,
  +name: string,
  +code: string,
|};

type ImageCustom = {|
  +name: string,
  +src: string,
|};

export type Props = {|
  ...Globals,
  +actions?: React.Node,
  +children?: React.Node,
  +label?: React.Node,
  +title?: React.Node,
  +subTitle?: React.Node,
  +image: Image | ImageCustom,
