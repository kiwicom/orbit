import type { Theme } from "../../defaultTheme";

type QueryFunction = (style: CSSRules) => CSSRules;

export type Devices =
  | "largeDesktop"
  | "desktop"
  | "tablet"
  | "largeMobile"
  | "mediumMobile"
  | "smallMobile";

declare function getBreakpointWidth(name: Devices, theme: Theme, pure?: false): string;
