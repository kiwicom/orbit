{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*", "typings/**/*.d.ts"],
  "exclude": [
    "**/*.test.*",
    "**/__tests__/**/*",
    "**/__typetests__/**/*",
    "**/*.stories.*",
    "**/*.ct-story.*",
    "**/*.ct.*",
    "**/RenderInRtl.tsx"
  ]
}
