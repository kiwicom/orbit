{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDirs": ["./src", "./.storybook"],
    "outDir": "lib",
    "jsx": "react",
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node",
    // use verbatimModuleSyntax instead, but after enforcing ESM as default
    "allowImportingTsExtensions": true,
    "importsNotUsedAsValues": "error",
    "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*", "css-prop.d.ts", "typings/**/*.d.ts", "config/**/*"]
}
