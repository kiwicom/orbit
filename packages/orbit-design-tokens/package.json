{
  "name": "@kiwicom/orbit-design-tokens",
  "version": "0.13.1",
  "description": "Design tokens of Orbit design system.",
  "main": "lib/index.js",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/kiwicom/orbit.git",
    "directory": "packages/orbit-design-tokens"
  },
  "files": [
    "lib/*",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build:dictionary": "yarn style-dictionary build --config ./src/dictionary/build.js",
    "build:lib": "babel --out-dir lib --ignore **/*.test.js,src/dictionary/* src",
    "build": "yarn build:dictionary && yarn build:lib && yarn copy:lib",
    "copy:lib": "copyfiles -u 1 'src/**/*.md' lib && copyfiles -u 1 'src/**/*.js.flow' lib && copyfiles -u 1 'src/**/*.d.ts' lib",
    "prepublishOnly": "yarn build"
  },
  "author": "Kiwi.com",
  "license": "MIT",
  "keywords": [
    "orbit",
    "ui",
    "design",
    "tokens"
  ],
  "devDependencies": {
    "eslint-config-airbnb-base": "^14.1.0",
    "lodash": "^4.17.14",
    "style-dictionary": "^2.10.2"
  },
  "dependencies": {
    "ramda": "^0.27.1"
  }
}
