type CustomSource = {|
  url: string,
  src: { [key: string]: string | number },
  srcSet: { [key: string]: string | number },
|};

export type Props = {|
  +size?: Size,
  +carriers: Carrier[],
  +customSource?: CustomSource,
  ...Globals,
|};

type styledCarrierLogo = {
  size: Size,
  carriers: Carrier,
