import type { Interpolation } from "styled-components";

import typeof ListItemType from "./ListItem";
import type { Globals } from "../common/common.js.flow";
import type { spaceAfter } from "../common/getSpacingToken/index";
import type { Theme } from "../defaultTheme";

export type Size = "small" | "normal" | "large";

type Type = "primary" | "secondary" | "separated";

export type Props = {|
  +children: React$Node,
  +size?: Size,
  +type?: Type,
  ...Globals,
  ...spaceAfter,
|};

declare export default React$ComponentType<Props>;

declare export var ListItem: ListItemType;

type ListContextProps = {|
  +size: ?Size,
  +type: ?Type,
|};

export type ListContextType = React.Context<ListContextProps>;

export type GetSizeToken = ({ theme: Theme, size: Size }) => Interpolation;

declare export var ListContext: ListContextType;

declare export var getSizeToken: GetSizeToken;
