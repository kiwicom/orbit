  | "white";
type Size = "large" | "normal" | "small";
type Weight = "normal" | "bold";

export type Props = {|
  +type?: Type,
  +size?: Size,
  +weight?: Weight,
  +align?: Align,
  +italic?: boolean,
  +uppercase?: boolean,
  +element?: Element,
  +children: React$Node,
