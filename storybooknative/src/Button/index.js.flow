// @flow

import { SIZE_TOKENS, TYPE_TOKENS } from "./consts";

export type Type =
  | "primary"
  | "secondary"
  | "info"
  | "success"
  | "warning"
  | "critical"
  | "facebook"
  | "google";

export type Size = "small" | "normal" | "large";

export type TypeTokens = $Keys<typeof TYPE_TOKENS>;
export type SizeTokens = $Keys<typeof SIZE_TOKENS>;

export type Props = {|
