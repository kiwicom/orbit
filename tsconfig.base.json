{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "types": ["node", "jest", "jest-styled-components", "@testing-library/jest-dom"],
    "ignoreDeprecations": "5.0"
  },
  "ts-node": {
    "compilerOptions": {
      "noEmit": true,
      "module": "esnext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "types": ["node", "jest", "jest-styled-components", "@testing-library/jest-dom"],
      "useUnknownInCatchVariables": false
    }
  }
}
